<h3>Your Cart</h3>
<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    <%= render @cart.line_items %>
    <tr>
      <td colspan="3">Total:</td>
      <td><%= number_to_currency(@cart.total_price) %></td>
    </tr>
  </tbody>
</table>

<%= link_to 'Continue shopping', products_path, class: "btn btn-secondary" %>
<%= link_to 'Checkout', new_order_path, class: "btn btn-primary" %>
