<h1>Change Password</h1>

<%= form_with(model: @user, url: update_password_user_path(@user), method: :patch) do |f| %>

  <div class="field">
    <%= f.label :old_password %><br />
    <%= f.password_field :old_password %><br />
  </div>

  <div class="field">
    <%= f.label :new_password %><br />
    <%= f.password_field :new_password %><br />
  </div>

  <div class="field">
    <%= f.label :new_password_confirmation %><br />
    <%= f.password_field :new_password_confirmation %><br />
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', edit_user_path(@user) %>
