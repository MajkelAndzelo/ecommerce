<h1>My Products</h1>

<% if @products.present? && @products.any? %>
  <ul>
    <% @products.each do |product| %>
      <li><%= link_to product.title, product %></li>
    <% end %>
  </ul>
<% else %>
  <p>You haven't added any products yet. </p>
  <%= link_to 'Add new product', new_product_path, class: "btn btn-primary" %>
<% end %>
